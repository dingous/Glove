<script>


function EnviaForm()
{
	$("#form1").submit(function () {
		
		
     $("#form1").DingousSubmit({
			url: "/<?=$this->modulo?>/<?=$this->controlador?>/salvar",
			post: 
			{
				form: $("#form1").serializeArray(),
				ID_USUARIO: $("#ID_USUARIO").val()
			},
			onCompletado: function(e) 
			{	
				
			}
		});

		return false;
 });
}



$(function() {

	 EnviaForm();	 
	 $( "#tabs" ).tabs()
	 
	 
	  $("#tb_sys_estado").bind("change", function(e)
	 {
		
		$.ajax({
             type: "POST",
             url: '/<?=$this->modulo?>/<?=$this->controlador?>/getcidades/idCidade/'+$(this).val(),
             data: null,
             dataType: "json",
             ContentType:	"text/json",
             success: function (data) 
             { 
				$('#tb_sys_cidade')
					 .find('option')
					 .remove()
					 .end()
					 .append('<option value="">selecione...</option>');
				
				$.each(data, function(index, value) { 
						  
				  $("#tb_sys_cidade").append("<option value='"+value.ID_CIDADE+"'>"+value.DESCRICAO+"</option>");

				});			
             },
			 error: function (data) 
			 {

				
			 }
         });
	 });
	 
	 
	 
	 <?php if($this->modelos->ID_USUARIO != NULL){ ?>
	 
	 $.ajax({
             type: "POST",
             url: '/<?=$this->modulo?>/<?=$this->controlador?>/getcidades/idCidade/'+<?=$this->modelos->tb_sys_estado?>,
             data: null,
             dataType: "json",
             ContentType:	"text/json",
             success: function (data) 
             { 
				$('#tb_sys_cidade')
					 .find('option')
					 .remove()
					 .end()
					 .append('<option value="">selecione...</option>');
				
				$.each(data, function(index, value) { 
						  
				  $("#tb_sys_cidade").append("<option value='"+value.ID_CIDADE+"'>"+value.DESCRICAO+"</option>");

				});			
				
				$("#tb_sys_cidade").val(<?=$this->modelos->tb_sys_estado?>);
             },
			 error: function (data) 
			 {

				
			 }
         });
		 <?php } ?>
	 
});
</script>

